<Window x:Class="Vistas.Main"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Mi Aplicación" Height="600" Width="800">
    <Window.Background>
        <ImageBrush ImageSource="Imagenes/fondo.jpg"/>
    </Window.Background>
    <Grid>

        <!-- Contenido Principal -->
        <Grid>
            <!-- Título de la Aplicación -->
            <TextBlock Text="Gestion: Playa de Estacionamiento"  HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,20,0,0" FontSize="20" DataContext="{Binding}" FontWeight="Heavy" />
            <StackPanel Margin="0,50" VerticalAlignment="Top" Orientation="Horizontal" Height="35">
                <Button Content="Gestión de Sectores" Name="btnGestionSectores" Click="btnGestionSectores_Click" IsEnabled="False" FontWeight="Heavy" Margin="10,0,0,0"></Button>
                <Button Content="Gestión de Tipos de Vehículo" Name="btnGestionTiposVehiculo" Click="btnGestionTiposVehiculo_Click" IsEnabled="False" Margin="10,0,0,0" FontWeight="Heavy"></Button>
                <Button Content="Gestión de Clientes" Name="btnGestionClientes" Click="btnGestionClientes_Click" IsEnabled="False" Margin="10,0,0,0" FontWeight="Heavy"></Button>
                <Button Content="Gestión de Estacionamiento" Name="btnGestionEstacionamiento" Click="btnGestionEstacionamiento_Click" IsEnabled="False" Margin="10,0,0,0" FontWeight="Heavy"></Button>
            </StackPanel>
            <Button Name="btnAtras" Margin="10,20,718,514" Background="Transparent" BorderBrush="Transparent" BorderThickness="0" Padding="0" Click="btnAtras_Click">
                <Image Source="Imagenes/back.png" Stretch="Uniform" Height="21" Width="45"></Image>
            </Button>
            <Frame  x:Name="Principal" Margin="0,91,0,0" />
        </Grid>
    </Grid>
    </Window>
