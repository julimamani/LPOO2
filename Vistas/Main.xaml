<Window x:Class="Vistas.Main"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Gestion Playa de Estacionamiento" Height="578" Width="818"
        WindowStyle="None" ResizeMode="NoResize">
    
    <Window.Background>
        <ImageBrush ImageSource="Imagenes/fondo.jpg"/>

    </Window.Background>
    <Grid>
        <!-- Contenido Principal -->
        <Grid>
            <!-- Título de la Aplicación -->
            <TextBlock Text="Gestion: Playa de Estacionamiento"  HorizontalAlignment="Center" VerticalAlignment="Top" Margin="229,38,229,0" FontSize="20" DataContext="{Binding}" FontWeight="Heavy" Height="36" />
            <StackPanel Margin="85,72,57,0" VerticalAlignment="Top" Orientation="Horizontal" Height="35">
                <Button Content="Gestión de Sectores" Name="btnGestionSectores" Click="btnGestionSectores_Click" IsEnabled="False" FontWeight="Heavy" ></Button>
                <Button Content="Gestión de Tipos de Vehículo" Name="btnGestionTiposVehiculo" Click="btnGestionTiposVehiculo_Click" IsEnabled="False" Margin="10,0,0,0" FontWeight="Heavy"></Button>
                <Button Content="Gestión de Clientes" Name="btnGestionClientes" Click="btnGestionClientes_Click" IsEnabled="False" Margin="10,0,0,0" FontWeight="Heavy"></Button>
                <Button Content="Gestión de Estacionamiento" Name="btnGestionEstacionamiento" Click="btnGestionEstacionamiento_Click" IsEnabled="False" Margin="10,0,0,0" FontWeight="Heavy"></Button>
            </StackPanel>
            <Button Content="Volver" Name="btnAtras" Margin="6,491,704,6" FontWeight="Heavy" Click="btnAtras_Click"></Button>
            <Frame  x:Name="Principal" Margin="0,113,0,70"  />
        </Grid>
    </Grid>
    </Window>
